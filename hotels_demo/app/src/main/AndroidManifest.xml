<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.demo.mina.hotels_demo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".HotelsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.hotels_list.HotelsListActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.hotel_details.HotelDetailsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"

            />
        <activity android:name=".ui.hotel_details.ImagePreviewFullScreenActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/AppNoActionbar"/>
    </application>

</manifest>